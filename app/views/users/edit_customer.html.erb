<div class="container">

<h1>Edit Customer</h1>

<%= render "user_errors" %>

<%= link_to "Delete User", user_path(@user), method: :delete,
                                  data: {confirm: "Are you sure?"} %>

<br>
<br>
<%= form_for @user, class: "form-horizontal" do |f| %>

  <div class="form-group row">
    <%= f.label :company_name, class: "col-md-2 control-label" %>
    <div class="col-md-8">
      <%= f.text_field :company_name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :company_address, class: "col-md-2 control-label" %>
    <div class="col-md-8">
      <%= f.text_field :company_address, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :company_overview, class: "col-md-2 control-label" %>
    <div class="col-md-8">
      <%= f.text_field :company_overview, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :company_website, class: "col-md-2 control-label" %>
    <div class="col-md-8">
      <%= f.text_field :company_website, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :email, class: "col-md-2 control-label" %>
    <div class="col-md-8">
      <%= f.email_field :email, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :company_phone_number, class: "col-md-2 control-label" %>
    <div class="col-md-8">
      <%= f.text_field :company_phone_number, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :password, class: "col-md-2 control-label" %>
    <div class="col-md-8">
      <%= f.text_field :password, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :password_confirmation, class: "col-md-2 control-label" %>
    <div class="col-md-8">
      <%= f.text_field :password_confirmation, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :user_type, as: :hidden, class: "col-md-2 control-label" %>
    <div class="col-md-8">
      <%= f.text_field :user_type, as: :hidden, input_html: {value: "customer"}, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :first_name, as: :hidden, class: "col-md-2 control-label" %>
    <div class="col-md-8">
      <%= f.text_field :first_name, as: :hidden, input_html: {value: "n/a"}, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :last_name, as: :hidden, class: "col-md-2 control-label" %>
    <div class="col-md-8">
      <%= f.text_field :last_name, as: :hidden, input_html: {value: "n/a"}, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
      <div class="col-md-12">
    <%= f.submit "Update User", class: "btn btn-primary col-md-offset-2" %>
  </div>
</div>
<% end  %>

</div>
