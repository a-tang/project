<h1>All Contests</h1>

<% @contest.each do |comps| %>
  <div>
    <h3>
      <% if comps.end_date && comps.end_date >= DateTime.now %>
      <%= link_to comps.title, contest_path(comps) %>
      <% if comps.image.present? %>
        <%= image_tag comps.image.url(:thumb) %>
      <% end %>
      <hr>
      <% end %>
    </h3>
  </div>
<% end %>
