<h1>All Contests</h1>
<div class="container">

    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">One Column Portfolio
                <small>Subheading</small>
            </h1>
            <ol class="breadcrumb">
                <li>
                  <%= link_to 'Home', root_path %>
                </li>
                <li class="active">One Column Portfolio</li>
            </ol>
        </div>
    </div>

    <% @contest.each do |comps| %>
      <% if comps.end_date && comps.end_date >= DateTime.now %>


          <div class="row">
            <div class="col-md-7 index_image">
                <%= link_to contest_path(comps) do %>
                  <% if comps.image.present? %>
                  <%= image_tag comps.image.url(:large) %>
                    <% else %>
                  <img class="img-responsive img-hover" src="http://placehold.it/700x300" alt="" style="width:700px;height:300px">
                <% end %>
            </div>
              <div class="col-md-5">
                  <h3><%= link_to comps.title, contest_path(comps) %></h3>
                  <h4><%= link_to comps.body, contest_path(comps) %></h4>
                  <p><%= link_to comps.body, contest_path(comps) %></p>
                  <%= link_to 'View Contest', contest_path(comps), class: 'btn btn-primary' %>
                  <% end %>
              </div>
          </div>
        <hr>
        <% end %>

    <% end %>
    <div class="row text-center">
        <div class="col-lg-12">
            <ul class="pagination">
                <li>
                    <a href="#">&laquo;</a>
                </li>
                <li class="active">
                    <a href="#">1</a>
                </li>
                <li>
                    <a href="#">2</a>
                </li>
                <li>
                    <a href="#">3</a>
                </li>
                <li>
                    <a href="#">4</a>
                </li>
                <li>
                    <a href="#">5</a>
                </li>
                <li>
                    <a href="#">&raquo;</a>
                </li>
            </ul>
        </div>
    </div>
</div>
